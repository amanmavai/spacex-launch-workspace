{
  "name": "spacex-launch",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p $PORT",
    "heroku-postbuild": "npm run build",
    "format": "npm run prettier -- --write",
    "prettier": "prettier \"**/*.+(js|jsx|ts|tsx|css|scss|html|json|md)\"",
    "lint-staged": "lint-staged"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "eslint-config-prettier"
    ],
    "rules": {
      "no-console": "warn",
      "react/react-in-jsx-scope": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,scss,html,json,md}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "autoprefixer": "9.8.6",
    "next": "9.5.1",
    "postcss-cli": "7.1.1",
    "postcss-preset-env": "6.7.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-query": "2.5.13",
    "tailwindcss": "1.6.2"
  },
  "devDependencies": {
    "eslint-config-prettier": "6.11.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5"
  }
}
